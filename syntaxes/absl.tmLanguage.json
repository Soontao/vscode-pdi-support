{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ABAP Script Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.absl",
					"match": "\\b(raise|return|import|var|in|foreach|if|else|while|switch|case)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.absl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.absl",
					"match": "\\\\."
				}
			]
		},

		"comments": {
			"patterns": [
				{
					"name": "comment.line",
					"begin": "//",
					"end": "\n"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.absl"
}